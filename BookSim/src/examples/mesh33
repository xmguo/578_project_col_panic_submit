//simple 8X8 torus under injection mode 


// Topology
topology = mesh;
k = 3;
n = 2;
// Routing
routing_function = dim_order ;
// Flow control
num_vcs = 4;
// Traffic
classes = 1;
traffic = uniform;
comp_rate = 0.4;
injection_rate = 0.04;
packet_size=3;

latency_thres = 50000.0;
print_csv_results = 1;
print_activity = 1;
